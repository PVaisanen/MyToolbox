<h2 class="page-header">Search Tools</h2>
<form action="/tools" method="GET">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%=searchOptions.name %>">
    </div>
    <div>
        <label>Serialnumber</label>
        <input type="text" name="qrCode" value="<%=searchOptions.qrCode %>">
    </div>
    <button type="submit">Search</button>
</form>
<br>
<div>
    <% tools.forEach(tool => { %> 
        <a href="/tools/<%= tool.id %>">
            <img height="150" width="150" src="<%= tool.toolImagePath %> ">
        </a>
    <% })%> 
</div>